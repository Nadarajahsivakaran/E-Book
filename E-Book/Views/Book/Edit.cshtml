@model E_Book.Models.Book

<h1 class="text-center">Update Book</h1>
 
<div class="d-flex justify-content-center">
    <form method="post" action="/Edit" class="w-50">
        <input asp-for="Id" hidden />
        <div class="form-group mb-3">
            <label asp-for="Title" class="form-label"></label>
            <input asp-for="Title" type="text" class="form-control" placeholder="Enter Title">
        </div>

        <div class="form-group mb-3">
            <label asp-for="Author" class="form-label"></label>
            <input asp-for="Author" type="text" class="form-control" placeholder="Enter Author">
        </div>

        <div class="form-group mb-3">
            <label asp-for="PublishedDate" class="form-label">Published Date</label>
            <input asp-for="PublishedDate" type="date" class="form-control" placeholder="Enter Published Date">
        </div>

        <div class="form-group mb-3">
            <label asp-for="NoOfCopies" class="form-label">No Of Copies</label>
            <input asp-for="NoOfCopies" type="number" class="form-control" placeholder="Enter No Of Copies">
        </div>

        <button type="submit" class="btn btn-success">Update</button>
    </form>
</div>
